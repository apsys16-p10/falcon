#! /bin/bash
bash db_delete.sh
ssh hkucs@10.22.1.1  "killall -9 memcached-server"
ssh hkucs@10.22.1.2  "killall -9 memcached-server"
ssh hkucs@10.22.1.3  "killall -9 memcached-server"
ssh hkucs@10.22.1.1  "sed -i '/127.0.0.1/{n;s/.*/        port       = 7004;/}' $RDMA_ROOT/RDMA/target/nodes.local.cfg  "
ssh hkucs@10.22.1.2  "sed -i '/127.0.0.1/{n;s/.*/        port       = 7004;/}' $RDMA_ROOT/RDMA/target/nodes.local.cfg  "
ssh hkucs@10.22.1.3  "sed -i '/127.0.0.1/{n;s/.*/        port       = 7004;/}' $RDMA_ROOT/RDMA/target/nodes.local.cfg  "
ssh hkucs@10.22.1.1  "sed -i '/check_output/c     check_output = 0;' $RDMA_ROOT/RDMA/target/nodes.local.cfg  "
ssh hkucs@10.22.1.2  "sed -i '/check_output/c     check_output = 0;' $RDMA_ROOT/RDMA/target/nodes.local.cfg  "
ssh hkucs@10.22.1.3  "sed -i '/check_output/c     check_output = 0;' $RDMA_ROOT/RDMA/target/nodes.local.cfg  "
ssh -f hkucs@10.22.1.1  "env node_id=0  LD_LIBRARY_PATH=$RDMA_ROOT/RDMA/.local/lib  cfg_path=$RDMA_ROOT/RDMA/target/nodes.local.cfg LD_PRELOAD=$RDMA_ROOT/RDMA/target/interpose.so $RDMA_ROOT/apps/memcached/install/bin/memcached-server -m 64 -l 0.0.0.0 -p 7004 -u root -P $RDMA_ROOT/apps/memcached/install/memcachedrep.pid -d"  
sleep 2 
ssh -f hkucs@10.22.1.2  "env node_id=1  LD_LIBRARY_PATH=$RDMA_ROOT/RDMA/.local/lib  cfg_path=$RDMA_ROOT/RDMA/target/nodes.local.cfg LD_PRELOAD=$RDMA_ROOT/RDMA/target/interpose.so $RDMA_ROOT/apps/memcached/install/bin/memcached-server -m 64 -l 0.0.0.0 -p 7004 -u root -P $RDMA_ROOT/apps/memcached/install/memcachedrep.pid -d" 
sleep 2 
ssh -f hkucs@10.22.1.3  "env node_id=2  LD_LIBRARY_PATH=$RDMA_ROOT/RDMA/.local/lib  cfg_path=$RDMA_ROOT/RDMA/target/nodes.local.cfg LD_PRELOAD=$RDMA_ROOT/RDMA/target/interpose.so $RDMA_ROOT/apps/memcached/install/bin/memcached-server -m 64 -l 0.0.0.0 -p 7004 -u root -P $RDMA_ROOT/apps/memcached/install/memcachedrep.pid -d" 
sleep 5 
skip_client=false
local_pid=$(ssh hkucs@10.22.1.1 pidof $RDMA_ROOT/apps/memcached/install/bin/memcached-server | wc -l)
if [ "$local_pid" == "1" ]; then
echo memcached in localhost is running
echo -e "\n"
else
echo memcached in localhost is breaking down
echo -e "\n"
skip_client=true
fi
remote1_pid=$(ssh hkucs@10.22.1.2 pidof $RDMA_ROOT/apps/memcached/install/bin/memcached-server | wc -l)
if [ "$remote1_pid" == "1" ]; then
echo memcached in remote_hostone is running
echo -e "\n"
else
echo memcached in remote_hostone is breaking down
echo -e "\n"
skip_client=true
fi
remote2_pid=$(ssh hkucs@10.22.1.3 pidof $RDMA_ROOT/apps/memcached/install/bin/memcached-server | wc -l)
if [ "$remote2_pid" == "1" ]; then
echo memcached in remote_hosttwo is running
echo -e "\n"
else
echo memcached in remote_hosttwo is breaking down
echo -e "\n"
skip_client=true
fi
if [ "$skip_client" = "true" ]; then
echo "Skip benchmark and kill all servers and restart again"
else
ssh hkucs@147.8.178.252  "$RDMA_ROOT/apps/memcached/mcperf/bin/mcperf --server=202.45.128.160 --port=7004 --linger=0 --call-rate=0 --num-calls=6000 --conn-rate=0 --num-conns=8 --sizes=d10"  > memcached-hook_result/memcached-hook_output_$1
sleep 10 
fi
ssh hkucs@10.22.1.1  "killall -9 memcached-server"
ssh hkucs@10.22.1.2  "killall -9 memcached-server"
ssh hkucs@10.22.1.3  "killall -9 memcached-server"
sleep 30